<?include "cpack_variables.wxi"?>

<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs" RequiredVersion="3.6.3303.0">

    <Package Name="$(var.CPACK_PACKAGE_NAME)" Language="1031" Version="$(var.CPACK_PACKAGE_VERSION)" Manufacturer="$(var.CPACK_PACKAGE_VENDOR)" UpgradeCode="$(var.CPACK_WIX_UPGRADE_GUID)" InstallerVersion="301" ProductCode="$(var.CPACK_WIX_PRODUCT_GUID)" Scope="perMachine" Compressed="yes">

        <SummaryInformation Description="$(var.CPACK_PACKAGE_NAME)" Keywords="!(loc.PackageKeywords)" Comments="!(loc.PackageComments)" />

        <Property Id="ARPCOMMENTS" Value="!(loc.ArpComment)" />
        <Property Id="ARPHELPLINK" Value="!(loc.ArpHelp)" />
        <Property Id="ARPURLINFOABOUT" Value="!(loc.ArpAbout)" />
        <Property Id="ARPURLUPDATEINFO" Value="!(loc.ArpUpdate)" />
        <Property Id="ARPCONTACT" Value="$(var.CPACK_PACKAGE_VENDOR)" />

        <!-- We don't need system restore: https://docs.microsoft.com/en-us/windows/win32/msi/msifastinstall -->
        <Property Id="MSIFASTINSTALL" Value="1" />

        <Media Id="1" Cabinet="media1.cab" EmbedCab="yes" />

        <MajorUpgrade Schedule="afterInstallInitialize" AllowSameVersionUpgrades="yes" DowngradeErrorMessage="!(loc.DowngradeErrorMessage)" />


        <Property Id="WIN10FOUND" Secure="yes">
            <DirectorySearch Id="searchSystem" Path="[SystemFolder]" Depth="0">
                <FileSearch Id="searchFile" Name="advapi32.dll" MinVersion="6.3.10000.0" />
            </DirectorySearch>
        </Property>

        <Launch Condition="Installed OR (VersionNT64 &gt;= 1000) OR (VersionNT64 = 603 AND WIN10FOUND)" Message="!(loc.WindowsRequired)" />


        <Property Id="WIN10RELEASEID">
            <RegistrySearch Id="searchId" Root="HKLM" Key="Software\Microsoft\Windows NT\CurrentVersion" Name="ReleaseId" Type="raw" />
        </Property>

        <Launch Condition="(MsiNTProductType &gt; 1) OR Installed OR NOT (WIN10RELEASEID) OR (WIN10RELEASEID &gt;= 1809)" Message="!(loc.WindowsClient)" />

        <Launch Condition="(MsiNTProductType = 1) OR Installed OR NOT (WIN10RELEASEID) OR (WIN10RELEASEID &gt;= 1809) OR (WIN10RELEASEID = 1607)" Message="!(loc.WindowsServer)" />


        <WixVariable Id="WixUILicenseRtf" Value="$(var.CPACK_WIX_LICENSE_RTF)" />

        <WixVariable Id="CompanyRootKey" Value="Software\$(var.CPACK_PACKAGE_VENDOR)\AusweisApp2" /> <!-- use var.CPACK_PACKAGE_NAME after migrating to new registry key -->

        <?ifdef CPACK_WIX_PRODUCT_ICON?>
        <Property Id="ARPPRODUCTICON" Value="ProductIcon.ico" />
        <Icon Id="ProductIcon.ico" SourceFile="$(var.CPACK_WIX_PRODUCT_ICON)" />
        <?endif?>

        <?ifdef CPACK_WIX_UI_BANNER?>
        <WixVariable Id="WixUIBannerBmp" Value="$(var.CPACK_WIX_UI_BANNER)" />
        <?endif?>

        <?ifdef CPACK_WIX_UI_DIALOG?>
        <WixVariable Id="WixUIDialogBmp" Value="$(var.CPACK_WIX_UI_DIALOG)" />
        <?endif?>

        <Property Id="InstallAction" Value="!(loc.InstallActionInstall)" />
        <Property Id="AllowStartOnExit" Value="1" />

        <!-- ######################### -->
        <!-- ProductFeature components -->
        <!-- ######################### -->
        <FeatureRef Id="ProductFeature">
            <FeatureRef Id="Executable" />
            <FeatureRef Id="InstallSettings" />
            <FeatureRef Id="RuntimeSettings" />
            <ComponentRef Id="RememberInstallRoot" />
        </FeatureRef>

        <UIRef Id="CustomWixUI_InstallDir" />
    </Package>
</Wix>
